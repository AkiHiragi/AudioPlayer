<Window x:Class="AudioPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AudioPlayer" 
        xmlns:converters="clr-namespace:AudioPlayer.Converters"
        mc:Ignorable="d"
        Title="Audio Player" Height="600" Width="900"
        Background="#FF1E1E1E"
        KeyDown="MainWindow_KeyDown"
        Focusable="True">
    
    <Window.Resources>
        <converters:HalfConverter x:Key="HalfConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="200"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#FF2D2D30" Margin="10" CornerRadius="5">
            <Canvas x:Name="VisualizationCanvas" Background="Black">
                <Canvas.RenderTransform>
                    <ScaleTransform ScaleY="-1" CenterY="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Canvas},Converter={StaticResource HalfConverter}}"/>
                </Canvas.RenderTransform>
            </Canvas>
        </Border>

        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="#FF2D2D30" CornerRadius="5" Padding="15">
                <StackPanel>
                    <TextBlock x:Name="TrackTitle" Text="Выберите аудиофайл"
                               Foreground="White" FontSize="16" FontWeight="Bold"
                               TextWrapping="Wrap" Margin="0,0,0,10"/>
                    <TextBlock x:Name="TrackArtist" Text=""
                               Foreground="#FFCCCCCC" FontSize="12"
                               TextWrapping="Wrap" Margin="0,0,0,10"/>
                    <Slider x:Name="ProgressSlider" Height="20" 
                            Margin="0,0,0,5"
                            Minimum="0" Maximum="100" Value="0"
                            ValueChanged="ProgressSlider_ValueChanged"
                            PreviewMouseLeftButtonDown="ProgressSlider_PreviewMouseLeftButtonDown"
                            PreviewMouseLeftButtonUp="ProgressSlider_PreviewMouseLeftButtonUp"
                            Background="#FF404040"
                            Foreground="#FF00A0FF"
                            IsMoveToPointEnabled="True">
                        <Slider.Resources>
                            <Style TargetType="Thumb">
                                <Setter Property="Background" Value="#FF00A0FF"/>
                                <Setter Property="BorderBrush" Value="White"/>
                                <Setter Property="BorderThickness" Value="1"/>
                                <Setter Property="Height" Value="12"/>
                                <Setter Property="Width" Value="12"/>
                            </Style>
                        </Slider.Resources>
                    </Slider>
                    <Grid>
                        <TextBlock x:Name="CurrentTime" Text="00:00"
                                   Foreground="#FFCCCCCC" FontSize="10"
                                   HorizontalAlignment="Left"/>
                        <TextBlock x:Name="TotalTime" Text="00:00"
                                   Foreground="#FFCCCCCC" FontSize="10"
                                   HorizontalAlignment="Right"/>
                    </Grid>
                </StackPanel>
            </Border>

            <Border Grid.Column="1" Background="#FF2D2D30" CornerRadius="5" Margin="10,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Плейлист"
                               Foreground="White" FontSize="14" FontWeight="Bold"
                               Margin="15,10,15,5"/>

                    <ListBox x:Name="PlaylistBox" Grid.Row="1" 
                             Background="Transparent" BorderThickness="0" 
                             Foreground="White" Margin="10,0,10,10"
                             SelectionChanged="PlaylistBox_SelectionChanged">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" Padding="5" 
                                           Foreground="White"
                                           TextTrimming="CharacterEllipsis"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>
        </Grid>

        <Border Grid.Row="2" Background="#FF2D2D30" Margin="10" CornerRadius="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal"
                            VerticalAlignment="Center" Margin="20,0">
                    <Button x:Name="OpenFileButton" Content="📁" 
                           Width="40" Height="40" Margin="5" 
                           Background="#FF404040" Foreground="White" 
                           BorderThickness="0" FontSize="16"
                           Click="OpenFileButton_Click"/>
                    <Button x:Name="PreviousButton" Content="⏮" 
                           Width="40" Height="40" Margin="5" 
                           Background="#FF404040" Foreground="White" 
                           BorderThickness="0" FontSize="16"
                           Click="PreviousButton_Click"/>
                    <Button x:Name="PlayPauseButton" Content="▶" 
                           Width="50" Height="50" Margin="5" 
                           Background="#FF00A0FF" Foreground="White" 
                           BorderThickness="0" FontSize="20"
                           Click="PlayPauseButton_Click"/>
                    <Button x:Name="NextButton" Content="⏭" 
                           Width="40" Height="40" Margin="5" 
                           Background="#FF404040" Foreground="White" 
                           BorderThickness="0" FontSize="16"
                           Click="NextButton_Click"/>
                    <Button x:Name="StopButton" Content="⏹" 
                           Width="40" Height="40" Margin="5" 
                           Background="#FF404040" Foreground="White" 
                           BorderThickness="0" FontSize="16"
                           Click="StopButton_Click"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal"
                            VerticalAlignment="Center" Margin="20,0">
                    <TextBlock Text="🔊" Foreground="White" FontSize="16" 
                              VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <Slider x:Name="VolumeSlider" Width="100" 
                           Minimum="0" Maximum="100" Value="50" 
                           VerticalAlignment="Center"
                           ValueChanged="VolumeSlider_ValueChanged"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
